<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="RedColor">#E6192A</Color>
    <Color x:Key="LightRedColor">#FF333E</Color>
    <Color x:Key="PinkColor">#C89398</Color>
    <Color x:Key="DarkRedColor">#321A1C</Color>
    <Color x:Key="BorderRedColor">#653438</Color>
    <Color x:Key="TransparentRed">#33e6192a</Color>
    
    <!-- Fonts -->
    <OnPlatform x:Key="RegularFont" x:TypeArguments="x:String">
        <On Platform="iOS" Value="SplineSans-Regular" />
        <On Platform="Android" Value="SplineSans-Regular.ttf#SplineSans-Regular" />
        <On Platform="WinUI" Value="Assets/Fonts/SplineSans-Regular.ttf#SplineSans-Regular" />
    </OnPlatform>

    <OnPlatform x:Key="SemiBoldFont" x:TypeArguments="x:String">
        <On Platform="iOS" Value="SplineSans-SemiBold" />
        <On Platform="Android" Value="SplineSans-SemiBold.ttf#SplineSans-SemiBold" />
        <On Platform="WinUI" Value="Assets/Fonts/SplineSans-SemiBold.ttf#SplineSans-SemiBold" />
    </OnPlatform>

    <!-- Label styles -->
    <Style x:Key="TitleLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
        <Setter Property="FontFamily" Value="{StaticResource SemiBoldFont}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style x:Key="SubtitleLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PinkColor}" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style x:Key="InputLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="LinkLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource RedColor}" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Entry styles -->
    <Style x:Key="DefaultEntryStyle" TargetType="Entry">
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource PinkColor}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource PinkColor}" />
        <Setter Property="Opacity" Value="0.6" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!-- Button styles -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
        <Setter Property="FontFamily" Value="{StaticResource RegularFont}" />
        <Setter Property="BackgroundColor" Value="{StaticResource RedColor}" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Border Style for Input -->
    <Style x:Key="InputBorderStyle" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 48" />
        <Setter Property="Stroke" Value="{StaticResource BorderRedColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource DarkRedColor}" />
    </Style>

    <!-- Image Style for Input Icon -->
    <Style x:Key="InputIconStyle" TargetType="Image">
        <Setter Property="HeightRequest" Value="18" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Decorative Border Style -->
    <Style x:Key="DecorativeBorderStyle" TargetType="Border">
        <Setter Property="HeightRequest" Value="64" />
        <Setter Property="WidthRequest" Value="64" />
        <Setter Property="StrokeShape" Value="RoundRectangle 32" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="BackgroundColor" Value="{StaticResource TransparentRed}" />
    </Style>
</ResourceDictionary>