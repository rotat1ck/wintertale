<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Wintertale.Client.ViewModels.Auth"
             x:Class="Wintertale.Client.Views.LoginPage">

    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <Image Source="background.png" Aspect="AspectFill" />

        <Border Opacity="0.9">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#80000000" Offset="0" />
                    <GradientStop Color="#CC000000" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
            <!-- Надпись входа -->
            <Label TextColor="#FFFFFF" FontFamily="SplineSans-SemiBold" 
                   FontSize="18" Text="Вход" FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Иконка хлопушки -->
            <Border HeightRequest="64" WidthRequest="64" Margin="30"
                    StrokeShape="RoundRectangle 32,32,32,32"
                    StrokeThickness="0"
                    BackgroundColor="#33e6192a">
                <Image HeightRequest="28"
                        Source="confetti.png"/>
            </Border>

            <!-- Надписи -->
            <Label TextColor="#FFFFFF" FontFamily="SplineSans-SemiBold"
                   FontSize="32" FontAttributes="Bold" Text="С новым годом!"
                   HorizontalOptions="Center"/>
            <Label TextColor="#C89398" FontFamily="SplineSans-Regular"
                   FontSize="16" Text="Войдите, чтобы отслеживать праздник и смотреть трансляцию"
                   MaximumWidthRequest="250" Margin="0,10,0,0"
                   HorizontalTextAlignment="Center"/>

            <!-- Ввод номера -->
            <VerticalStackLayout Padding="32,32,32,0">
                <Label TextColor="#FFFFFF" FontFamily="SplineSans-Regular"
                       FontSize="14" Text="Номер телефона"
                       Margin="10,0,0,5"/>
                <Border StrokeShape="RoundRectangle 48" Stroke="#653438">
                    <Grid ColumnDefinitions="*,Auto" BackgroundColor="#321A1C">
                        <Entry Grid.Column="0" Text="{Binding Phone}" FontFamily="SplineSans-Regular"
                               FontSize="16" Opacity="0.6" TextColor="#c89398" 
                               Placeholder="7XXXXXXXXXX" PlaceholderColor="#c89398" MaxLength="11"/>
                        <Image Grid.Column="1" Source="phone.png" Margin="0,0,16,0"
                                       HeightRequest="18" HorizontalOptions="End"/>
                    </Grid>
                </Border>
            </VerticalStackLayout>
            
            <!-- Ввод пароля -->
            <VerticalStackLayout Padding="32,16,32,0">
                <Label TextColor="#FFFFFF" FontFamily="SplineSans-Regular"
                       FontSize="14" Text="Пароль"
                       Margin="10,0,0,5"/>
                <Border StrokeShape="RoundRectangle 48" Stroke="#653438">
                    <Grid ColumnDefinitions="*,Auto" BackgroundColor="#321A1C">
                        <Entry Grid.Column="0" Text="{Binding Password}" FontFamily="SplineSans-Regular"
                               FontSize="16" Opacity="0.6" TextColor="#c89398" 
                               Placeholder="••••••••" PlaceholderColor="#c89398" 
                               IsPassword="True"/>
                        <Image Grid.Column="1" Source="password.png" Margin="0,0,16,0"
                               HeightRequest="15" WidthRequest="21" HorizontalOptions="End"/>
                    </Grid>
                </Border>
            </VerticalStackLayout>
            
            <!-- Кнопка входа -->
            <Button Margin="32,32,32,0" Command="{Binding LoginCommand}"
                    Text="Войти" TextColor="#FFFFFF" FontFamily="SplineSans-Regular"
                    BackgroundColor="#E6192A" CornerRadius="24"/>
            
            <!-- Нет аккаунта -->
            <HorizontalStackLayout Padding="50" HorizontalOptions="Center">
                <Label Text="Нет аккаунта?" TextColor="#C89398" FontSize="16" FontFamily="SplineSans-Regular" />
                <Label Text="Зарегистрироваться" TextColor="#E6192A" Margin="5,0,0,0"
                       FontSize="16" FontFamily="SplineSans-Regular" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenRegisterCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>